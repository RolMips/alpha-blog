<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-sm-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, data: { turbo: false }, class: "shadow p-3 mb-3 bg-secondary rounded", local: :true) do |f| %>
          <div class="mb-3 row">
            <%= f.label :title, class: "col-sm-2 form-label text-light" %>
            <div class="col-sm-10">
              <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
            </div>
          </div>
          <div class="mb-3 row">
            <%= f.label :description, class: "col-sm-2 form-label text-light" %>
            <div class="col-sm-10">
              <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
            </div>
          </div>
          <div class="mb-3 row">
            <%= f.label "Categories selection", class: "col-sm-2 form-label text-light" %>
            <div class="col-sm-10">
              <%= f.collection_select(:category_ids, Category.all, :id, :name, 
                                      {prompt: "Make your selection from the list below (can be empty)"}, 
                                      {multiple: true, size: 5, class: "form-select choices-multiple shadow rounded"}) %>
            </div>
          </div>
          <div class="mb-3 col-auto text-center">
              <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
      <% end %>
      </div>
      <div class="mb-3 col-auto text-center">
        <%= link_to("Cancel and return to articles listing", articles_path, class: "btn btn-outline-secondary") %>
      </div>
    </div>
</div>
