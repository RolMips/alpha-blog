<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-sm-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, data: { turbo: false }, class: "shadow p-3 mb-3 bg-secondary rounded", local: :true) do |f| %>
          <div class="mb-3 row">
            <%= f.label :username, class: "col-sm-2 form-label text-light" %>
            <div class="col-sm-10">
              <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
            </div>
          </div> 
          <div class="mb-3 row">
            <%= f.label :email, class: "col-sm-2 form-label text-light"  %><br/>
            <div class="col-sm-10">
              <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
            </div>
          </div>
          <div class="mb-3 row">
            <%= f.label :password, class: "col-sm-2 form-label text-light"  %><br/>
            <div class="col-sm-10">
              <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose your password" %>
            </div>
          </div>
          <div class="mb-3 col-auto text-center">
              <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %>
          </div>
      <% end %>
      </div>
      <div class="mb-3 col-auto text-center">
        <%= link_to("Cancel and return to home page", root_path, class: "btn btn-outline-secondary") %>
      </div>
    </div>
</div>